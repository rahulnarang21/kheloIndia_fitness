<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/calender_i"
            android:layout_marginRight="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:text="June 13,2017"
            android:id="@+id/calendar_tv"/>

    </LinearLayout>


<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="20dp"
    android:elevation="3dp"
    card_view:cardCornerRadius="3dp"

    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/my_log_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="Games/Sports"
            android:textColor="@color/black"
            android:textSize="22sp" />


        <TextView
            android:id="@+id/period_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/my_log_tv"
            android:layout_marginBottom="10dp"
            android:text="Period: 3"
            android:textColor="@color/text_color"
            android:textSize="20sp" />


        <TextView
            android:id="@+id/boys_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/period_tv"
            android:layout_alignBottom="@+id/period_tv"
            android:layout_marginRight="30dp"
            android:layout_toEndOf="@+id/my_log_tv"
            android:layout_toRightOf="@+id/my_log_tv"
            android:gravity="end"
            android:text="Boys: 57"
            android:textColor="@color/text_color"
            android:textSize="20sp" />


        <TextView
            android:id="@+id/class_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/period_tv"
            android:layout_marginBottom="15dp"
            android:text="Class: II E"
            android:textColor="@color/text_color"
            android:textSize="20sp" />


        <TextView
            android:id="@+id/girls_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/class_tv"
            android:layout_alignBottom="@+id/class_tv"
            android:layout_marginRight="30dp"
            android:layout_toEndOf="@+id/my_log_tv"
            android:layout_toRightOf="@+id/my_log_tv"
            android:gravity="end"
            android:text="Girls: 12"
            android:textColor="@color/text_color"
            android:textSize="20sp" />


        <TextView
            android:id="@+id/chat_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/class_tv"
            android:drawableLeft="@drawable/chat_i"
            android:drawablePadding="10dp"
            android:paddingBottom="30dp"
            android:textColor="@color/text_color"
            android:textSize="20sp"
            />

<View
    android:layout_width="match_parent"
    android:layout_height="0.1dp"
    android:layout_below="@+id/chat_tv"
    android:background="@color/black"
    android:id="@+id/border_tv"
    android:layout_marginBottom="15dp"

    />
        <TextView
            android:id="@+id/delete_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/border_tv"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:text="DELETE"
            android:textColor="@color/red_text_color"
            android:textSize="20sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/edit_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/delete_tv"
            android:layout_alignBottom="@+id/delete_tv"
            android:layout_toEndOf="@+id/my_log_tv"
            android:layout_toRightOf="@+id/my_log_tv"
            android:text="EDIT"
            android:textColor="@color/colorAccent"
            android:textSize="20sp"
            android:textStyle="bold" />

    </RelativeLayout>

</android.support.v7.widget.CardView>


</LinearLayout>