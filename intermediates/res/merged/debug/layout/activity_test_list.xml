<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <include
        layout="@layout/tool_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="6dp"
        android:background="@color/light_grey"
        >

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/header_school_i" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:id="@+id/school_tv"
            android:layout_marginLeft="10dp"
            android:text="Rabindranth world school" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grey"
        android:weightSum="5"
        android:orientation="vertical">

        <!-- ********* 1st part ***************-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/agility_layout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@color/white"
                android:layout_marginRight="@dimen/margin_value"
                android:layout_marginBottom="@dimen/margin_value"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/agility_img"
                    android:layout_width="@dimen/image_size"
                    android:layout_height="@dimen/image_size"
                    android:src="@drawable/agility_i"/>

                <TextView
                    android:id="@+id/agility_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Agility" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/speed_layout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginLeft="@dimen/margin_value"
                android:layout_marginBottom="@dimen/margin_value"
                android:background="@color/white"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/speed_img"
                    android:layout_width="@dimen/image_size"
                    android:layout_height="@dimen/image_size"
                    android:src="@drawable/speed_i"/>

                <TextView
                    android:id="@+id/speed_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Speed" />
            </LinearLayout>

            </LinearLayout>

        <!-- ********* 2nd part ***************-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/endurance_layout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@color/white"
                android:layout_marginRight="@dimen/margin_value"
                android:layout_marginBottom="@dimen/margin_value"
                android:layout_marginTop="@dimen/margin_value"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/endurance_img"
                    android:layout_width="@dimen/image_size"
                    android:layout_height="@dimen/image_size"
                    android:src="@drawable/endurance_i" />

                <TextView
                    android:id="@+id/endurance_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Endurance" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/flexibility_layout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginTop="@dimen/margin_value"
                android:layout_marginLeft="@dimen/margin_value"
                android:layout_marginBottom="@dimen/margin_value"
                android:background="@color/white"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/flexibility_img"
                    android:layout_width="@dimen/image_size"
                    android:layout_height="@dimen/image_size"
                    android:src="@drawable/flexibility_i"/>

                <TextView
                    android:id="@+id/flexibility_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Flexibility" />
            </LinearLayout>

        </LinearLayout>

        <!-- ********* 3rd part ***************-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/balance_layout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@color/white"
                android:layout_marginRight="@dimen/margin_value"
                android:layout_marginBottom="@dimen/margin_value"
                android:layout_marginTop="@dimen/margin_value"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/balance_img"
                    android:layout_width="@dimen/image_size"
                    android:layout_height="@dimen/image_size"
                    android:src="@drawable/balance_i"/>

                <TextView
                    android:id="@+id/balance_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Balance" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/hand_eye_layout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginLeft="@dimen/margin_value"
                android:layout_marginBottom="@dimen/margin_value"
                android:layout_marginTop="@dimen/margin_value"
                android:background="@color/white"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/hand_eye_img"
                    android:layout_width="@dimen/image_size"
                    android:layout_height="@dimen/image_size"
                    android:src="@drawable/hand_e_coor_i"/>

                <TextView
                    android:id="@+id/hand_eye_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hand-Eye Coordination"
                    android:gravity="center" />
            </LinearLayout>

        </LinearLayout>

        <!-- ********* 4th part ***************-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/strength_layout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@color/white"
                android:layout_marginRight="@dimen/margin_value"
                android:layout_marginTop="@dimen/margin_value"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/strength_img"
                    android:layout_width="@dimen/image_size"
                    android:layout_height="@dimen/image_size"
                    android:src="@drawable/strength_i"/>

                <TextView
                    android:id="@+id/strength_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Strength" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/bmi_layout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginLeft="@dimen/margin_value"
                android:layout_marginTop="@dimen/margin_value"
                android:background="@color/white"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/bmi_img"
                    android:layout_width="@dimen/image_size"
                    android:layout_height="@dimen/image_size"
                    android:src="@drawable/bmi_i"/>

                <TextView
                    android:id="@+id/bmi_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BMI" />
            </LinearLayout>

        </LinearLayout>

        <!-- ********* 5th ***************-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/power_layout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@color/white"
                android:layout_marginRight="@dimen/margin_value"
                android:layout_marginTop="@dimen/margin_value"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/power_img"
                    android:layout_width="@dimen/image_size"
                    android:layout_height="@dimen/image_size"
                    android:src="@drawable/power_i"/>

                <TextView
                    android:id="@+id/power_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Power" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginLeft="@dimen/margin_value"
                android:layout_marginTop="@dimen/margin_value"
                android:background="@color/white"
                android:orientation="vertical">


            </LinearLayout>

        </LinearLayout>
        <!-- *********** end ******************-->

          </LinearLayout>



</LinearLayout>