<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:padding="@dimen/dateTitlePaddingBottom">

    <ImageView
        android:id="@+id/leftButton"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:visibility="visible"
        android:padding="5dp"
        android:src="@drawable/backward" />

    <kheloindia.com.assessment.robotocalendar.font.RobotoTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:tag="dateTitle"
        android:text="FEBRUARY 2014"
        android:textColor="@color/dayOfWeekColor"
        android:textSize="16dp"
        android:textStyle="bold"
        custom:monthTitleColor="@color/monthTitleColor" />

    <ImageView
        android:id="@+id/rightButton"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:padding="5dp"
        android:layout_centerVertical="true"
        android:visibility="visible"
        android:src="@drawable/forward" />

</RelativeLayout>