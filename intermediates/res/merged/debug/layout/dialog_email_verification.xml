<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:padding="@dimen/fab_margin"
    android:background="@color/white"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Verification Failed"
        android:textAllCaps="false"
        android:textSize="@dimen/headings_size"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text1"
        android:layout_marginTop="10dp"
        android:text="Your Email Id is not registered with us."
        android:textColor="#696969"/>

    <EditText
        android:id="@+id/email_id_edt"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:singleLine="true"
        android:layout_below="@+id/text2"/>

    <TextView
        android:id="@+id/retry_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/email_id_edt"
        android:layout_alignParentRight="true"
        android:text="Retry"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/headings_size"
        android:layout_marginTop="10dp"
        android:textAllCaps="true"/>

</RelativeLayout>