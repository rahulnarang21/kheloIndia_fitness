<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="20dp"
    android:paddingLeft="20dp"
    android:paddingBottom="20dp"
    android:paddingRight="5dp"
    >

    <CheckBox
        android:id="@+id/school_cbx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="7dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="7dp"
        android:text="Rabindranath World School"
        android:textColor="@color/grey"
        android:textSize="15sp"
        android:button="@drawable/school_check"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/school_status" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/retest_label"
        android:text="@string/all_children"
        android:layout_below="@+id/school_cbx"
        android:layout_alignLeft="@+id/school_cbx"
        android:layout_marginLeft="36dp"
        android:textColor="@color/grey"
        />

    <TextView
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:id="@+id/school_status"
        android:gravity="end"
        android:layout_alignParentRight="true"
        android:layout_alignBaseline="@+id/school_cbx"
        android:visibility="gone"
        />


</RelativeLayout>