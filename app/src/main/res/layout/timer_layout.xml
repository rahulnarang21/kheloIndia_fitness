        <!--android:background="@drawable/sacn_i"-->
        <!--android:text="SKIP"-->
        <!--android:textColor="@color/colorAccent"-->
        <!--android:visibility="gone"/>-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/student_scan_btn"
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/color_primary_border_button"
            android:text="@string/scan"
            android:textAllCaps="true"
            android:textColor="@color/colorAccent"
            />

        <Button
            android:id="@+id/student_remove_btn"
            android:layout_width="50dp"
            android:layout_height="35dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/red_border_button"
            android:text="@string/skip"
            android:textAllCaps="true"
            android:textColor="@color/red"
            android:visibility="gone"
            android:layout_alignParentRight="true"/>

        <TextView
            android:id="@+id/skipped_label"
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:layout_marginLeft="5dp"
            android:text="@string/skipped"
            android:gravity="center_vertical"
            android:textColor="@color/red"
            android:visibility="gone"
            />


        <Button
            android:id="@+id/undo_skipped_btn"
            android:layout_width="50dp"
            android:layout_height="35dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/color_primary_border_button"
            android:text="@string/undo"
            android:textAllCaps="true"
            android:textColor="@color/colorAccent"
            android:visibility="gone"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

</LinearLayout>