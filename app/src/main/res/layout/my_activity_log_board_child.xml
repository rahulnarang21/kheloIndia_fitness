<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="16dp"
    android:layout_marginTop="12dp"
    android:background="@color/white"
    app:cardElevation="3dp"
    app:cardCornerRadius="3dp"
    app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp">

            <TextView
                android:id="@+id/my_log_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/period_tv"
                android:layout_marginBottom="8dp"
                android:textColor="@color/black"
                android:textSize="16sp"
               />

            <TextView
                android:id="@+id/skill_area_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/my_log_tv"
                android:layout_alignBottom="@+id/my_log_tv"
                android:layout_marginRight="12dp"
                android:layout_toRightOf="@+id/my_log_tv"
                android:gravity="end"
                android:textColor="@color/text_color"
                android:textSize="16sp" />


            <TextView
                android:id="@+id/period_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color"
                android:textSize="16sp"
                android:layout_marginBottom="8dp"/>


            <TextView
                android:id="@+id/class_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/period_tv"
                android:layout_alignBottom="@+id/period_tv"
                android:layout_marginRight="12dp"
                android:layout_toRightOf="@+id/period_tv"
                android:gravity="end"
                android:textColor="@color/text_color"
                android:textSize="16sp" />


            <TextView
                android:id="@+id/boys_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/my_log_tv"
                android:layout_marginBottom="8dp"
                android:textColor="@color/text_color"
                android:textSize="16sp"
                />


            <TextView
                android:id="@+id/girls_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/boys_tv"
                android:layout_alignBottom="@+id/boys_tv"
                android:layout_marginRight="12dp"
                android:layout_toRightOf="@+id/boys_tv"
                android:gravity="end"
                android:textColor="@color/text_color"
                android:textSize="16sp" />


            <TextView
                android:id="@+id/chat_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/boys_tv"
                android:drawableLeft="@drawable/chat_i"
                android:drawablePadding="4dp"
                android:textColor="@color/text_color"
                android:textSize="16sp"

                />

            <TextView
                android:id="@+id/attended_by_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/chat_tv"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:text="@string/attended_max"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_marginBottom="8dp"
                android:padding="8dp"
                />

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/attended_by_tv"
                android:id="@+id/student_details_rv"
                android:visibility="gone"
                />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

