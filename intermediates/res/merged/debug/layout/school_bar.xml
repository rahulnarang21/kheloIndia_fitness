<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_grey"
        android:id="@+id/school_bar_rlt"
        >

        <ImageView
            android:id="@+id/school_img"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/header_school_i"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:paddingTop="5dp"
           />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:id="@+id/school_txt"
            android:textColor="@color/grey"
            android:padding="10dp"
            android:layout_toRightOf="@+id/school_img"
            android:text="Rabindranath World School"
            />

      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:id="@+id/school_lt"
          android:orientation="horizontal"
          android:visibility="gone"/>

</RelativeLayout>
