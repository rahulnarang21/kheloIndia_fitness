<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_vertical"
    >
    <RelativeLayout
        android:id="@+id/relative_layout"
        android:layout_width="match_parent"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/subcat_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Test 1"
            android:paddingRight="20dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="16dp"
            android:padding="10dp"
            android:layout_toLeftOf="@+id/video_img"/>
        <ImageView
            android:id="@+id/video_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
           android:layout_toLeftOf="@+id/description_img"
            android:layout_marginRight="8dp"
            android:scaleType="fitXY"
            android:padding="8dp"
            android:src="@drawable/video_i" />
        <ImageView
            android:id="@+id/description_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp"
            android:src="@drawable/info_i"
            android:padding="5dp"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:visibility="gone"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Single Student"
            android:padding="10dp"
            android:background="@drawable/grey_box"
            android:layout_marginRight="15dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Multiple Students"
            android:background="@drawable/grey_box"
            android:padding="10dp"
            android:layout_marginLeft="15dp"/>
    </LinearLayout>
</LinearLayout>